<%= form_with(model: book, local: true) do |form| %>
  <% if book.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(book.errors.count, "error") %> prohibited this book from being saved:</h2>

      <ul>
      <% book.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :bookname %>
    <%= form.text_field :bookname, id: :book_bookname %>
  </div>

  <div class="field">
    <%= form.label :author_id %>
	<%= form.collection_select :author_id, Author.all, :id, :authorname, :include_blank => "Select from List" %>
  </div>

  <div class="field">
    <%= form.label :category_id %>
	<%= form.collection_select :category_id, Category.all, :id, :categoryname, :include_blank => "Select from List" %>
  </div>

  <div class="field">
    <%= form.label :price %>
    <%= form.number_field :price, id: :book_price %>
  </div>

  <div class="field">
    <%= form.label :bookcover %>
    <%= form.text_field :bookcover, id: :book_bookcover %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
